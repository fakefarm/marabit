doctype html
html ng-app='myApp'
  head
    title Marabit
    script src='data.js'
    script src='lib/angular.js'
    script src='src/js/controllers.js'
    link rel='stylesheet' href='src/style.css'

  body
    .wrapper
      .headline
        .l-container
          h1 Races
      .main-content
        .l-container
          .races
            div ng-controller='RaceCtrl'
              div.race ng-repeat='race in races'
                span
                  | {{ race.title }}
                span.update-btn update
                span.race-place
                  | {{ race.position}} place ({{ race.count}})

